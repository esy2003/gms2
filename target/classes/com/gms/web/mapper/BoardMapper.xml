<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gms.web.mapper.BoardMapper">
	<resultMap id="respMap" type="com.gms.web.command.RespMap">
		<id property="seq" column="resp"/>
		<result property="userId" column="userId"/>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="regdate" column="regdate"/>
		<result property="userPw" column="userPw"/>
		<result property="name" column="name"/>
		<result property="ssn" column="ssn"/>
		<result property="email" column="email"/>
		<result property="major" column="major"/>
		<result property="phone" column="phone"/>
		<result property="profile" column="profile"/>
		
	</resultMap>
	
	<resultMap id="article" type="com.gms.web.board.Article">
		<id property="articleSeq" column="article_seq"/>
		<result property="userId" column="userId"/>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="regdate" column="regdate"/>
		<result property="hitCount" column="hitcount"/>
	</resultMap>
	
	<insert id="insert" parameterType="com.gms.web.command.Command">
	insert into board(
		article_seq,
		userId,
		title,
		content,
		hitcount,
		regdate
	)
	values (
		#{articleSeq}, 
		#{userId}, 
		#{title}, 
		#{content}, 
		#{hitCount}, 
		now()
	)
	</insert>

  <select id="selectSome"
   resultMap="article" 
   parameterType="com.gms.web.command.Command">
    select * from Board
  </select>
</mapper>